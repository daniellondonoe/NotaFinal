<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1">
    tools:context="com.daniellondono.notafinal.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Titulo"
        android:layout_weight="0.11"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="casual"
        android:typeface="monospace"
        android:textSize="14sp"
        android:lineSpacingExtra="8sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Practicas"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="casual"
                android:typeface="monospace"
                android:textSize="12sp"
                android:lineSpacingExtra="8sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewEnd" />

            <EditText
                android:id="@+id/et_Practicas"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_width="100sp"
                android:singleLine="false"
                android:selectAllOnFocus="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="12sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Av1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="casual"
                android:typeface="monospace"
                android:textSize="12sp"
                android:lineSpacingExtra="8sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewEnd" />
            <EditText
                android:id="@+id/et_Av1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_width="100sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Av2"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="casual"
                android:typeface="monospace"
                android:textSize="12sp"
                android:lineSpacingExtra="8sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewEnd" />
            <EditText
                android:id="@+id/et_Av2"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_width="100sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Av3"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="casual"
                android:typeface="monospace"
                android:textSize="12sp"
                android:lineSpacingExtra="8sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewEnd" />

            <EditText
                android:id="@+id/et_Av3"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_width="100sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Final"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="casual"
                android:typeface="monospace"
                android:textSize="12sp"
                android:lineSpacingExtra="8sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewEnd" />
            <EditText
                android:id="@+id/et_Final"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_width="100sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Nota"
        android:layout_weight="1.02"
        android:textSize="12sp"
        android:fontFamily="casual"
        android:textAlignment="center" />

    <Button
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Calcular"
        android:layout_weight="0.00"
        android:elevation="24dp"
        android:textSize="12sp" />
</LinearLayout>
